{
  "name": "make-webbly-things",
  "version": "1.6.0",
  "type": "module",
  "description": "A platform for hosting user generated websites",
  "author": "Pomax (pomax@nihongoresources.com)",
  "license": "See LICENSE.md",
  "engines": {
    "node": ">=24"
  },
  "scripts": {
    "precheck": "node check-deps",
    "admin": "npm start -- --admin-mode",
    "build": "npm run lint && npm run build:es",
    "build:es": "esbuild --log-level=info --bundle --external:/vendor/* --format=esm --target=esnext src/client/entry-point.js > public/js/editor.bundle.js",
    "prettier": "prettier --write \"./src/**/*.js\"",
    "prettier:html": "prettier --write \"./public/**/*.html\" --plugin prettier-plugin-jinja-template",
    "prettier:single": "prettier --no-config --ignore-path \"\" --write ",
    "start": "npm run precheck && node src/server/index.js",
    "test": "npm run precheck && npm run build && npm run test:node && npm run test:cleanup",
    "test:node": "cross-env NODE_ENV=TESTING node --experimental-test-coverage --test \"./src/tests/**/*.test.js\"",
    "lint": "npm run prettier && npm run prettier:html",
    "test:cleanup": "node ./src/tests/test-cleanup.js",
    "postinstall": "npx playwright install chromium && cp -r ./node_modules/file-icon-vectors/dist/icons/classic ./public/themes/default/images/icons/"
  },
  "dependencies": {
    "@codemirror/lang-css": "^6.2.1",
    "@codemirror/lang-html": "^6.4.9",
    "@codemirror/lang-javascript": "^6.2.2",
    "@codemirror/lang-markdown": "^6.2.5",
    "@codemirror/state": "^6.4.1",
    "@dotenvx/dotenvx": "^1.48.4",
    "@playwright/test": "^1.45.1",
    "any-ascii": "^0.3.3",
    "archiver": "^7.0.1",
    "better-sqlite3": "^12.4.1",
    "better-sqlite3-session-store": "^0.1.0",
    "codemirror": "^6.0.1",
    "cross-env": "^10.0.0",
    "custom-file-tree": "^6.1.0",
    "dotenv": "^17.2.1",
    "express": "^4.21.2",
    "express-session": "^1.18.2",
    "esbuild": "^0.25.8",
    "file-icon-vectors": "^1.0.0",
    "helmet": "^7.1.0",
    "marked": "^16.2.1",
    "mime": "^4.0.7",
    "multer": "^2.0.0",
    "nocache": "^4.0.0",
    "nunjucks": "^3.2.4",
    "passport": "^0.7.0",
    "passport-github2": "^0.1.12",
    "passport-google-oauth20": "^2.0.0",
    "passport-magic-link": "^2.1.1",
    "passport-mastodon": "^0.1.3",
    "prettier": "^3.6.2",
    "prettier-plugin-jinja-template": "^2.1.0",
    "ubase.js": "^1.0.3",
    "ws": "^8.18.3"
  }
}
